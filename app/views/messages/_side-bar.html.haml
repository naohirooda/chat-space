.side-bar
  .bar-top
    .bar-top-box
      %p.bar-top-box__left
        = current_user.name
      %ul.bar-top-box__right
        %li.bar-top-box__right__new-group
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.bar-top-box__right__edit
          =link_to edit_user_path(current_user) do
            =icon('fas', 'cog', class: 'icon')
           
            
  .bar-content
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message

